<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:padding="20dp"
	android:gravity="center_horizontal"
	android:orientation="vertical">
	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="@string/tv_title"
		android:layout_marginBottom="20dp"
		android:textSize="18dp"/>
	<Button
		android:id="@+id/btn_handler"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginBottom="@dimen/btn_marginBottom"
		android:text="@string/btn_test_handler"
		android:textSize="@dimen/btn_text_size"/>
	<Button
		android:id="@+id/btn_memory_leak"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginBottom="@dimen/btn_marginBottom"
		android:text="@string/title_memory_leak"
		android:textSize="@dimen/btn_text_size"/>
	<Button
		android:id="@+id/btn_router"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginBottom="@dimen/btn_marginBottom"
		android:text="@string/title_router"
		android:textSize="@dimen/btn_text_size"/>
	<Button
		android:id="@+id/btn_wlan"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginBottom="@dimen/btn_marginBottom"
		android:text="@string/title_wlan"
		android:textSize="@dimen/btn_text_size"/>
</LinearLayout>
